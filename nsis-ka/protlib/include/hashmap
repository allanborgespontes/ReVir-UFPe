#ifdef USE_UNORDERED_MAP
#include <unordered_map>
// typedefs for templates are a major headache, we use define instead
#define hashmap_t std::unordered_map 
#else
#include <ext/hash_map>
#define hashmap_t __gnu_cxx::hash_map
#endif

